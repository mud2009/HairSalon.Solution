@{
  Layout = "_Layout";
}

@using HairSalon.Models

@model List<HairSalon.Models.Client>

<h4>Clients:</h4>

@if (Model.Count == 0)
{
  <h5>No Clients have been added yet!</h5>
}

@foreach (Client client in Model)
{
  <p>@client.Name, Hairtyle: @client.Hairstyle, Stylist: @client.Stylist.Name, Appointment: @client.Time @client.Date</p>
}

<p>@Html.ActionLink("Add new Client", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>