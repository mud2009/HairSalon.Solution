@{
  Layout = "_Layout";
}
@using HairSalon.Models
@model HairSalon.Models.Stylist

<h4>Stylist Details</h4>

<h5>Stylist: @Html.DisplayFor(model => model.Name)</h5>

@foreach (Client client in Model.Clients)
{
  <p>@client.Name, Hairtyle: @client.Hairstyle, Appointment: @client.Time @client.Date</p>
}

<p>@Html.ActionLink("Add new Stylist", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>