@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist;

<h4>Add a new Stylist:</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new {placeholder = "Name", required = "required"})
  <br>
  @Html.LabelFor(model => model.Specialty)
  @Html.TextBoxFor(model => model.Specialty, new {placeholder = "Specialty", required = "required"})
  <br>
  @Html.LabelFor(model => model.Schedule)
  @Html.TextBoxFor(model => model.Schedule, new {placeholder = "Schedule", required = "required"})
  <br>
  <input type="submit" value="Add new Stylist" class="btn btn-primary">
}

<p>@Html.ActionLink("Show all Stylists", "Index")</p>