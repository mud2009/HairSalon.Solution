@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist;

<h4>Add a new Stylist:</h4>

<div class="form-group">
  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new {@class = "form-control", placeholder = "Name", required = "required"})
    <br>
    @Html.LabelFor(model => model.Specialty)
    @Html.TextBoxFor(model => model.Specialty, new {@class = "form-control", placeholder = "Specialty", required = "required"})
    @Html.LabelFor(model => model.Schedule)
    @Html.TextBoxFor(model => model.Schedule, new {@class = "form-control", placeholder = "Schedule", required = "required"})
    <br>
    <input type="submit" value="Add new Stylist" class="btn btn-primary">
  }
</div>

<p>@Html.ActionLink("Show all Stylists", "Index")</p>