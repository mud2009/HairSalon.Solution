@{
  Layout = "_Layout";
}

@using HairSalon.Models

@model List<HairSalon.Models.Stylist>

<h3>Stylists:</h3>

@if (Model.Count == 0)
{
  <h5>No Stylists have been added yet!</h5>
}

@foreach (Stylist stylist in Model)
{
  <p>@Html.ActionLink($"{stylist.Name}","Details", new {id = stylist.StylistId})</p>
}

<p>@Html.ActionLink("Add new Stylist", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>